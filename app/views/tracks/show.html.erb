


<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 50%), url('<%= cl_image_path @track.photo %>') ;">
  <div class="container">
    <h1><strong><%= @track.title %></strong></h1>
    <hr>
    <%= render 'shared/audio_player_tracks' %>
    <!-- <p>Change your life and learn to code at one of our campuses around the world.</p> -->
    <% tour_track_ids = @tour.tracks.ids %>
    <% track_id =  @track.id %>
    <% if track_id != @tour.tracks.last.id %>
      <% next_track_index = tour_track_ids.index(track_id)+1 %>
      <% next_track_id = tour_track_ids[next_track_index] %>
      <% next_track = @tour.tracks.find(next_track_id) %>
      <br><br>
      <%= link_to "Next track", track_goto_path(@tour, next_track), class: "btn-gradient" %>
    <% else %>
      <br><br>
      <p>Tour Completed!</p>
      <br>
      <%= link_to "Review Tour !", tour_path(@tour), class: "btn-lg btn-success"  %>
    <% end %>

    <!-- Button trigger modal -->

    <button type="button" class="btn btn-ghost" data-toggle="modal" data-target="#exampleModal" id="button-hungry">
      Hungry?
    </button>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel" style="color:black">5 restaurants near <strong style="color:#ff525e"><%= @track.title %></strong> </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

      <div class="container-fluid">
        <div class="row">
          <div id="zomato";
          data-destination-lon="<%= @marker[:lng] %>"
          data-destination-lat="<%= @marker[:lat] %>"
          ></div>

        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


