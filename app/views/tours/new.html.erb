<div class="form-container">
  <div class="row" id="form-create">
    <div class="col-xs-3"></div>
    <div class="col-xs-12 col-sm-6 sol-lg4">

      <h2>Create a tour</h2>

      <%= simple_form_for(@tour) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :start_location %>
        <%= f.input :description %>
        <%= f.input :category, collection: [ "History", "Food", "Adventure", "Supernatural", "Sightseeing", "Romance", "Adrenaline" ] %>
        <%= f.input :language %>
        <%= f.input :duration %>

      </div>
      <br>
      <%= f.button :submit, "Next step: Upload tour photos >", class: 'btn-primary'%>
      <% end %>
