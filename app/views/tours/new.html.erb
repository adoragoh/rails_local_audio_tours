<div class="container">
  <div class="row" id="form-create">
    <div class="col-xs-3"></div>
    <div class="col-xs-12 col-sm-6 sol-lg4">

      <%= simple_form_for(@tour) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :location %>
        <%= f.input :description %>
        <%= f.input :category, collection: [ "History", "Food", "Adventure", "Supernatural", "Sightseeing", "Romance", "Adrenaline" ] %>
        <%= f.input :price %>
        <%= f.input :date %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>
      <%= f.button :submit %>
<!--       </div> -->
   <!--  <div class="modal-footer"> -->
      <!-- <div class="form-actions"> -->
   <!--    </div> -->
    <% end %>
    </div>
  </div>
</div>
