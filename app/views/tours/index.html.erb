<div class="tab-content">
  <div role="tabpanel" class="list-cards tab-pane active" id="1">
    <div style="margin-top:14px; margin-bottom:60px ;">
      <div class="index-content text-center ">
        <h1 style="color:#ff525e; margin-bottom: 18px;">tourio</h1>
        <div style="margin-bottom:-10px;">
          <p style="font-weight: 400; opacity: 0.8; color: white;">EXPLORE AUDIO TOURS</p>
        </div>
        <!-- <h3>Audio tours near you</h3> -->
        <div class="category-tags">
          <% categories = [ "History", "Food", "Adventure", "Supernatural", "Sightseeing", "Romance", "Adrenaline", "Crime" ] %>
          <% categories.each do |category| %>
            <%= link_to category, filter_tours_path(query: category), class: 'btn btn-ghost-category', remote: true %>
            <!-- <a><%#= link_to category.upcase, tours_path(query: category) %></a> -->
          <% end %>
        </div>
        <div class="container">
          <div id="category-display">
            <!-- TODO: Need to fix this -->
            <div id="category-display-cards" class="d-lg-none d-xl-block">
              <% @tours.each do |tour| %>
                <%= render 'shared/card_v2', tour: tour %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <br>
      <!-- <a href="#">Back to Top</a> -->
    </div>
  </div>


