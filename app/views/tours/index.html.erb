<%= render 'shared/search_bar' %>
<%#= render 'shared/search_filter' %>

<div class="floating-nav">
<ul class="nav nav-pills">
  <li class="nav-item active">
    <a class="nav-link" href="#1" data-toggle="tab">List</a>
  </li>
  <li class="nav-item">
    <a class="nav-link js-refresh-size" href="#2" data-toggle="tab">Map</a>
  </li>
</ul>
</div>

<div class="tab-content">
  <div role="tabpanel" class="list-cards tab-pane active" id="1">
    <div style="margin-top:36px;">
      <div class="index-content text-center ">
        <h1 style="color:#ff525e; margin-bottom: 18px;">tourio</h1>
        <div style="margin-bottom:-10px;">
          <p style="font-weight: 400; opacity: 0.8; color: white;">EXPLORE</p>
        </div>
        <!-- <h3>Audio tours near you</h3> -->
        <div class="category-tags">
          <% categories = [ "History", "Food", "Adventure", "Supernatural", "Sightseeing", "Romance", "Adrenaline", "Crime" ] %>
          <% categories.each do |category| %>
            <%= link_to category, filter_tours_path(query: category), class: 'btn btn-ghost-category', remote: true %>
            <!-- <a><%#= link_to category.upcase, tours_path(query: category) %></a> -->
          <% end %>
        </div>
        <div id="category-display">
          <div id="category-display-cards">
            <% @tours.each do |tour| %>
              <%= render 'shared/card_v2', tour: tour %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div role="tabpanel" class="map-card tab-pane" role="tabpanel" id="2">
      <%= render 'shared/map' %>
  </div>

</div>
