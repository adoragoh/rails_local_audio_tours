  </div>
    <div class="show-title">
      <h3>Preview Tour  <i class="fas fa-play-circle"></i></h3>
      <%= render 'shared/audio_player' %>
    </div>

  <div class="card-group">
    <div class="card" style="border:none">
      <div class="card-body">
        <p class="card-text"><small class="text-muted"><%= @tour.category.capitalize %></small></p>
        <h5 class="card-title"><%= @tour.title %> </h5>
        <p class="card-text"><%= @tour.description %></p>
        <p class="card-text">Start location: <%= @tour.start_location %></p>
        <p class="card-text">Duration: <%= @tour.duration %></p>
        <p class="card-text">Language: <%= @tour.language %></p>

            <p class="card-text"><small class="text-muted">Last updated: <%= @tour.updated_at %></small></p>
            <br>
            <h6 class="card-title">Tracks: [This will be the tracks list users can select from. When they click on track, it will go to map with directions to the track's starting location. TBC]</h6>
            <% @tracks.each do |track| %>
            <p class="card-text"><%= link_to track.title, track_goto_path(params[:id], track) %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
    <hr>
    <div class="container">
      <h5 class="card-title">Visited Places</h5>
      <% tracks = @tour.tracks %>
      <% tracks.each do |track| %>
      <ul>
        <li>
          <p><%= track.title %></p>
        </li>
      </ul>
      <% end %>
    </div>
