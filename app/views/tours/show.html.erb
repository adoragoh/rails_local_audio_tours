<div class="main-container">
  <!-- <div class="btn btn-primary">Something</div> -->
  <div class="row">
    <div class="col-12">
      <img src="<%= cl_image_path @tour.photos[0].photo %>" alt="" class='main-image'>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <img src="<%= cl_image_path @tour.photos[0].photo %>" alt="" class='show-image'>
    </div>
    <div class="col-4">
      <img src="<%= cl_image_path @tour.photos[0].photo %>" alt="" class='show-image'>
    </div>
    <div class="col-4">
      <img src="<%= cl_image_path @tour.photos[0].photo %>" alt="" class='show-image'>
    </div>
  </div>
</div>


    <div class="show-title">
      <h3>Preview Tour  <i class="fas fa-play-circle"></i></h3>
    </div>

      <div class="card-group">
        <div class="card" style="border:none">
          <div class="card-body">
            <p class="card-text"><small class="text-muted"><%= @tour.category.capitalize %></small></p>
            <h5 class="card-title"><%= @tour.title %> </h5>
            <p class="card-text"><%= @tour.description %></p>
            <p class="card-text">Start location: <%= @tour.start_location %></p>
            <p class="card-text">Duration: <%= @tour.duration %></p>
            <p class="card-text">Language: <%= @tour.language %></p>

            <p class="card-text"><small class="text-muted">Last updated: <%= @tour.updated_at %></small></p>
          </div>
        </div>
      </div>
    </div>

    <!-- <div id="map"></div> -->



    <div class="cards">


    </div>

    <div class="show-details">
      <% tracks = @tour.tracks %>
      <% tracks.each do |track| %>
      <p><%= track.location %></p>
      <% end %>
    </div>
    <div class="show-guide-details">

    </div>

