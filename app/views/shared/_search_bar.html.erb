
  <div class="search-container">
    <div class="search-field">
      <%= form_tag tours_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
        id: "search-bar",
      placeholder: "Find a tour near you"
      %>
    </div>
    <button type="button" class="btn btn-success btn-block">Search</button>
    <%end%>
  </div>




