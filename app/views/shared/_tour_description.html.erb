<div class="tour-description">
  <p><small class="text-muted"><%= @tour.category.capitalize %></small></p>
  <div class="row tour-description__meta">
    <div class="col"><i class="fas fa-map-marker-alt">&nbsp;</i><%= @tour.start_location.capitalize %></div>
    <div class="col"><i class="fas fa-clock">&nbsp;</i><%= rand(1..3) %> hours</div>
    <div class="col"><i class="fas fa-flag">&nbsp;</i><%= @tour.language %></div>
  </div>
  <p class="tour-description-body"><%= @tour.description %></p>

  <p><small class="text-muted">Last updated: <%= @tour.updated_at %></small></p>
      <br>
  <%= link_to "START TOUR !", track_goto_path(params[:id], @tracks.first), class: "btn btn-gradient" %>
</div>

