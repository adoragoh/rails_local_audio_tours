
<button type="button" class="btn btn-ghost" data-toggle="modal" data-target="#exampleModal" id="button-hungry">
  Hungry?
</button>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel" style="color:black">Great local restaurants near <strong style="color:#ff525e"><%= @track.title %></strong> </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="background-color:rgba(40,40,40,0.8)">

      <div class="container-fluid">
        <div class="row">
          <div id="zomato";
          data-destination-lon="<%= @marker[:lng] %>"
          data-destination-lat="<%= @marker[:lat] %>"
          ></div>

        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
