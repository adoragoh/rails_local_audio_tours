<div class="container">
  <div class="row" id="form-create">
    <div class="col-xs-3"></div>
    <div class="col-xs-12 col-sm-6 sol-lg4">

      <h2>Step 2/3: Add photos to <%= @tour.title %></h2>

      <%= simple_form_for [@tour, @photo] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :photo, input_html: { multiple: true } %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Next step: Add tracks >", class: 'btn-primary'%>
      </div>
      <% end %>
    </div>
  </div>
</div>
